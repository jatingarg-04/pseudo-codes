import java.io.*;
import java.util.*;

class UserMainCode {
    public int isPalinNum(int input1) {
        int original = input1;
        int reversed = 0;

        while (input1 > 0) {
            int digit = input1 % 10;
            reversed = reversed * 10 + digit;
            input1 = input1 / 10;
        }

        if (original == reversed) {
            return 2; // palindrome
        } else {
            return 1; // not palindrome
        }
    }
}
